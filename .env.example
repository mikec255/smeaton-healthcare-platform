# Azure Production Environment Variables
NODE_ENV=production

# Database Configuration (Azure Database for PostgreSQL)
DATABASE_URL=your-azure-postgres-connection-string

# Azure-specific URLs
AZURE_FRONTEND_URL=https://your-app.azurestaticapps.net
FRONTEND_URL=https://your-app.azurewebsites.net

# Authentication
SESSION_SECRET=your-production-session-secret-here

# Email Configuration (Brevo/SendGrid)
BREVO_API_KEY=your-brevo-api-key
SENDGRID_API_KEY=your-sendgrid-api-key

# Object Storage (Google Cloud or Azure Blob)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEYFILE_PATH=/path/to/service-account.json

# GitHub Integration
GITHUB_TOKEN=your-github-token

# App Configuration
VITE_API_URL=https://your-app.azurewebsites.net/api
PORT=8080